<div class="signup-box">
  <label>First name</label>
  <div class="input-group mb-3">
    <span class="input-group-text" id="basic-addon1">@</span>
    <input
      class="signup-input"
      type="text"
      id="first-name-upload"
      placeholder="first name"
      aria-label="Username"
      aria-describedby="basic-addon1"
    />
  </div>

  <label>Last name</label>
    <div class="input-group mb-3">
      <span class="input-group-text" id="basic-addon1">@</span>
      <input class="signup-input" type="text" id="last-name-upload" placeholder="last name" aria-label="Username" aria-describedby="basic-addon1">
    </div>

    <label>User name</label>
    <div class="input-group mb-3">
      <span class="input-group-text" id="basic-addon1">@</span>
      <input class="signup-input" type="text" id="username-upload" placeholder="username" aria-label="Username" aria-describedby="basic-addon1">
    </div>
    <input type="text" id="username-upload"/>

    <label>Password</label>
    <input type="password" id="password-upload"/>
    <label>Reenter password</label>
    <input type="password" id="password-upload-2"/>
    <label>Email</label>
    <input type="email" id="email-upload"/>
    <label>Address</label>
    <input type="text" ="address-upload"/>

    <p>Upload your avatar</p>
    <div>
    {{> uploadWidget id="upload-widget" cloudName=cloudName uploadPreset=uploadPreset uploadValue="avatar-upload"}}
    <input hidden="true" id="avatar-upload"/>

    </div>
    <div class="display-flex-2">
        <button class="btn btn-primary">Submit</button>
        <button class="btn btn-danger">Cancel</button>
    </div>
    <script>
        document.getElementById("flex").addEventListener("click", function() {
            const obj = {
                firstName: document.getElementById("first-name-upload").value
                lastName: document.getElementById("last-name-upload").value,
                userName: document.getElementById("username-upload").value,
                password: document.getElementById("password-upload").value,
                email: document.getElementById("email-upload").value,
                address: document.getElementById("address-upload").value,
                avatar: document.getElementById("avatar-upload").value
            }
        })
    </script>
</div> 
