{{#extend "main"}}
{{#content "body"}}
    <h1>{{blog.title}}</h1>
    <p>by {{blog.author}} ({{blog.authorRole}}) on {{blog.date}}</p>
    <p>{{blog.content}}</p>
    <a href="/blogs/{{blog.id}}/edit">Edit</a> |
    <form action="/blogs/{{blog.id}}?_method=DELETE" method="POST" style="display:inline;">
        <button type="submit">Delete</button>
    </form>
    <a href="/blogs">Back to All Posts</a>
{{/content}}
{{/extend}}
