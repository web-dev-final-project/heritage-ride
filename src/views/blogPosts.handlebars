{{#extend "main"}}
{{#content "body"}}
    <h1>All Blog Posts</h1>
    <ul>
        {{#each blogs}}
            <li>
                <a href="/blogs/{{this.id}}">{{this.title}}</a> by {{this.author}} ({{this.authorRole}})
                <p>{{this.date}}</p>
            </li>
        {{/each}}
    </ul>
    <a href="/blogs/new">Create a New Blog Post</a>
{{/content}}
{{/extend}}
